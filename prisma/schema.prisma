generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model productos {
  id       Int      @id @default(autoincrement())
  codigo    String
  nombre    String
  enstock   String
  precio    String
  tipo      String
  marca     String
  descri    String
  ventas    ventas[]
  // createdAt DateTime @default(now())
